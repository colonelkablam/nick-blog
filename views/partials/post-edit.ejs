<div class="post-container">
    <h3 class="post-title"><%= post.title %></h3>
    <p class="post-body">
        <%= post.body %>
    </p>
    <div>
        <p class="post-date">
            <%= "Posted on: " + post.date + ". Post id: " + post.id %>
        </p>
        <div class="edit-buttons">
            <a href="/edit-post/<%= post.id %>" class="btn-edit">Edit</a>
            <a href="/delete-post/<%= post.id %>" class="btn-delete">Delete</a>
        </div>
    </div>
</div>
